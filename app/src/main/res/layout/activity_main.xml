<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ice_blue_white_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Activity"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Section: Requestor Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B3E0F2"
            android:layout_marginBottom="8dp" />

        <!-- Individual Fields -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Date:" android:textStyle="bold" />
        <TextView android:id="@+id/tvDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#000000" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Department:" android:textStyle="bold" android:layout_marginTop="6dp"/>
        <TextView android:id="@+id/tvDepartment" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#000000" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Requesting Officer:" android:textStyle="bold" android:layout_marginTop="6dp"/>
        <TextView android:id="@+id/tvBorrower" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#000000" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Project Name:" android:textStyle="bold" android:layout_marginTop="6dp"/>
        <TextView android:id="@+id/tvProjectName" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#000000" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Time:" android:textStyle="bold" android:layout_marginTop="6dp"/>
        <TextView android:id="@+id/tvTime" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#000000" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Venue:" android:textStyle="bold" android:layout_marginTop="6dp"/>
        <TextView android:id="@+id/tvVenue" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#000000" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B3E0F2"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Section: Item Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requested Items"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Each item includes: Qty, Description, Transfer Date, From âžœ To"
            android:textSize="13sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

        <!-- Footer / Signature -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B3E0F2"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />



    </LinearLayout>
</ScrollView>
